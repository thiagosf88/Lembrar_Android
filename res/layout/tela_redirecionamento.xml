<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/preto"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/preto"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/texto_inicial"
                android:typeface="monospace" >
            </TextView>
        </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <TextView
                android:id="@+id/idtx_logar"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/tx_logar"
                android:typeface="monospace" >
            </TextView>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <Button
                android:id="@+id/bt_logar"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:text="@string/btx_logar" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                     <TextView
                android:id="@+id/idtx_criar_conta"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/tx_criar_conta"
                android:typeface="monospace" >
            </TextView>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                     <Button
                android:id="@+id/bt_criar_conta"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:text="@string/btx_criar_conta" >
            </Button>
                </TableRow>
            </TableLayout>
    </LinearLayout>

</ScrollView>